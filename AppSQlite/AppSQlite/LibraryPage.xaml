<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSQlite.LibraryPage" Title="Информация о книге">
    <StackLayout>
        <Label Text="Автор" />
        <Entry Text="{Binding Author}" />
        <Label Text="Название книги" />
        <Entry Text="{Binding BookName}" />
        
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveLibrary" />
            <Button Text="Удалить" Clicked="DeleteLibrary" />
            <Button Text="Отмена" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>